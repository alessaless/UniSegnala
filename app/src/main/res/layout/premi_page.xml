<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#E4E7FD">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:src="@drawable/logounisegnala"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/idTesto"
        android:layout_centerHorizontal="true"
        android:text="Lista Premi"
        android:layout_below="@id/imageView"
        android:textSize="30dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/testoPunteggio"
        android:layout_alignParentLeft="true"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_below="@id/idTesto"
        android:layout_marginTop="10dp"
        android:paddingTop="30dp"
        android:layout_marginLeft="15dp"
        />

    <ListView
        android:id="@+id/listaPremi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/testoPunteggio"
        android:paddingTop="10dp"
        android:scrollbars="vertical"
        android:divider="@android:color/transparent"
        android:dividerHeight="1dp" />

    <Button
        android:id="@+id/buttonRiscatta"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:background="@drawable/buttonangoliarrotondati"
        android:layout_marginBottom="4dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="40dp"
        android:text="Riscatta premi" />

</RelativeLayout>
